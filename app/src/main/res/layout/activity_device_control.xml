        <TextView
            android:id="@+id/textView"
            android:layout_width="147dp"
            android:layout_height="25dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:background="#f9535353"
            android:text="Supply Power"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/supp"
            android:layout_width="163dp"
            android:layout_height="25dp"

            android:layout_marginTop="8dp"
            android:background="#55252424"
            android:text="Supp.P"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/op_name" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/rec_mode"
            android:layout_width="147dp"
            android:layout_height="25dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="#ae2727"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/read_cnt" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/unit"
            android:layout_width="163dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="#ae2727"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/ad_sleep" />


    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/send_setting"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinner_border"
        android:backgroundTint="#a33a3a"
        android:text="Save"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdconst" />

    <Button
        android:id="@+id/button4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/spinner_border"
        android:backgroundTint="#484343"
        android:text="Cancel"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdconst" />


</android.support.constraint.ConstraintLayout>